<%- include("../../partials/header") %>
<%- include("../../partials/navbar") %>
<div class="container">
  <div class="row">
    <div class="col-12 my-5">
      <h5 class="text-white">Categorias</h5>
      <a class="btn btn-success mt-1" href="/admin/categories/new">
        Criar Categoria
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table table-dark table-bordered text-white">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Título</th>
            <th scope="col">Slug</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% categories.map(category => { %>
          <tr>
            <th scope="row">
              <%= category.id %>
            </th>
            <td>
              <%= category.title %>
            </td>
            <td>
              <%= category.slug %>
            </td>
            <td class="d-md-flex d-sm-column">
              <form class="col-md-6 col-sm-12">
                <input type="hidden" name="id" />
                <button class="btn btn-warning text-white col-12">
                  Editar
                </button>
              </form>

              <form class="col-md-6 col-sm-12" method="POST" action="/categories/delete">
                <input type="hidden" name="id" value="<%= category.id %>" />
                <button class="btn btn-danger text-white col-12">
                  Deletar
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
</div>
<%- include("../../partials/footer") %>